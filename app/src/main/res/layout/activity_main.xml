<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/backInput"
    android:orientation="vertical">

    <TextView
        android:layout_marginBottom="25dp"
       android:text="0"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backInput"
        android:gravity="right"
        android:id="@+id/show"
        android:textColor="@color/white"
        android:textSize="55dp"
         />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/buAc"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:text="AC"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buS"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="numberEvent"
                android:text="+/-"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buM"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#B8ABAB"
                android:text="%"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buDiv"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:onClick="op"
                android:text="/"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="numberEvent"
                android:text="7"
                android:textSize="18dp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="numberEvent"
                android:text="8"
                android:textSize="18dp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="numberEvent"
                android:text="9"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buD"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:onClick="op"
                android:text="*"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="numberEvent"
                android:text="4"
                android:textSize="18dp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="numberEvent"
                android:text="5"
                android:textSize="18dp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="numberEvent"
                android:text="6"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:onClick="op"
                android:text="-"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="numberEvent"
                android:text="1"
                android:textSize="18dp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="numberEvent"
                android:text="2"
                android:textSize="18dp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:onClick="numberEvent"
                android:text="3"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buAdd"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:onClick="op"
                android:text="+"
                android:textSize="18dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:onClick="numberEvent"
            android:textSize="18dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:id="@+id/bu0"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:text="0"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/bu."
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gray"
            android:onClick="numberEvent"
            android:text="."
            android:textSize="18dp" />

        <Button
            android:id="@+id/buY"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:onClick="buEqual"
            android:text="="
            android:textSize="18dp" />

    </LinearLayout>


</LinearLayout>